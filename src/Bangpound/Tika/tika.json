{
    "name": "Apache Tika",
    "apiVersion": "1.4",
    "description": "content analysis toolkit http://tika.apache.org",
    "operations": {
        "greeting": {
            "httpMethod": "GET",
            "uri": "tika"
        },
        "version": {
            "httpMethod": "GET",
            "uri": "version"
        },
        "_base": {
            "httpMethod": "PUT",
            "errorResponses": [
                {
                    "type": "415",
                    "phrase": "Unknown file type"
                },
                {
                    "type": "422",
                    "phrase": "Unparsable document of known type"
                },
                {
                    "type": "500",
                    "phrase": "Internal error"
                }
            ]
        },
        "tika": {
            "extends": "_base",
            "uri": "tika{/id}",
            "summary": "extract content",
            "responseNotes": "",
            "responseType": "class",
            "responseClass": "Bangpound\\Tika\\TikaResponse",
            "description": "string",
            "parameters": {
                "file": {
                    "location": "body",
                    "required": true
                },
                "id": {
                    "location": "uri",
                    "required": false
                },
                "type": {
                    "location": "header",
                    "sentAs": "Content-Type"
                },
                "Accept": {
                    "location": "header",
                    "default": "text/xml",
                    "static": true
                }
            }
        },
        "meta": {
            "extends": "_base",
            "uri": "meta{/id}",
            "summary": "extract metadata",
            "parameters": {
                "file": {
                    "location": "body",
                    "required": true
                },
                "id": {
                    "location": "uri",
                    "required": false
                },
                "Accept": {
                    "location": "header",
                    "default": "text/csv",
                    "static": true
                }
            }
        },
        "unpacker": {
            "extends": "_base",
            "uri": "unpacker{/id}",
            "parameters": {
                "file": {
                    "location": "body",
                    "required": true
                },
                "id": {
                    "location": "uri",
                    "required": false
                },
                "Accept": {
                    "location": "header",
                    "default": "application/zip"
                }
            }
        }
    }
}

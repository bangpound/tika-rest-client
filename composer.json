{
    "name": "bangpound/tika-rest-client",
    "description": "Web services client for Apache Tika",
    "license": "MIT",
    "require": {
        "php": ">=5.3.0",
        "guzzle/guzzle": "~3.7.2"
    },
    "require-dev": {
        "monolog/monolog": "1.*",
        "psr/log": "1.0.*",
        "phpunit/phpunit": "3.7.*",
        "apache/tika": "~1.4"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "apache/tika",
                "version": "1.5",
                "dist": {
                    "url": "http://psg.mtu.edu/pub/apache/tika/tika-1.5-src.zip",
                    "type": "zip"
                },
                "source": {
                    "url": "git://git.apache.org/tika.git",
                    "type": "git",
                    "reference": "1.5-rc2"
                }
            }
        }
    ],
    "authors": [
        {
            "name": "Benjamin Doherty",
            "email": "bjd@bangpound.org"
        }
    ],
    "autoload": {
        "psr-0": {
            "Bangpound\\Tika\\": "src/",
            "Bangpound\\Tika\\Tests\\": "tests/"
        }
    }
}
